{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-opus-4.5",
  "permission": {
    "bash": {
      "*": "ask",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "dotnet build *": "allow",
      "dotnet test *": "allow",
      "grep *": "allow",
      "echo *": "allow",
      "find *": "allow",
      "fd *": "allow",
      "ls *": "allow",
      "mkdir *": "allow"
    },
    "glob": "allow",
    "grep": "allow",
    "list": "allow"
  },
  "agent": {
    "build": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "mv *": "allow"
      }
    }
  }
}
